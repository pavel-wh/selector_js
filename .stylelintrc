{
  "extends": [
    "stylelint-config-airbnb",
    "stylelint-config-rational-order",
    "stylelint-prettier"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "max-nesting-depth": [
      3,
      {
        "ignore": [
          "pseudo-classes"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "**/*.js"
  ]
}
